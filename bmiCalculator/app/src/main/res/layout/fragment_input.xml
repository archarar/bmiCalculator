<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".input"
    android:background="@drawable/wallpaper">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="53dp"
        android:layout_toStartOf="@+id/heightft"
        android:text="Height"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/heightft"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neck"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="53dp"
        android:layout_toStartOf="@+id/textView7"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textColor="#AA00AA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/heightin"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neck"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="53dp"
        android:layout_toStartOf="@+id/textView6"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textColor="#AA00AA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="57dp"
        android:text="in."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neck"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="53dp"
        android:layout_toStartOf="@+id/heightin"
        android:text="ft."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="53dp"
        android:layout_toStartOf="@+id/neck"
        android:text="Neck"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/neck"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/waist"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="52dp"
        android:layout_toStartOf="@+id/textView3"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textColor="#AA00AA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="52dp"
        android:text="in."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/errorMessage"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="33dp"
        android:layout_toStartOf="@+id/waist"
        android:text="Waist"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calculate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="79dp"
        android:text="in."
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/waist"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/errorMessage"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="29dp"
        android:layout_toStartOf="@+id/textView2"
        android:background="#FFFFFF"
        android:ems="10"
        android:inputType="number"
        android:textColor="#AA00AA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Calculate"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calculate"
        android:layout_marginEnd="-28dp"
        android:layout_marginBottom="23dp"
        android:layout_toStartOf="@+id/textView2"
        android:background="#E34747"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Please fill in all empty spaces."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/bmi_logo" />

</RelativeLayout>