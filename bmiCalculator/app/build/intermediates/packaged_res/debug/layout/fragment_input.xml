<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".input">

    <EditText
        android:id="@+id/waist"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/errorMessage"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="21dp"
        android:layout_toStartOf="@+id/textView2"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="55dp"
        android:layout_toStartOf="@+id/heightft"
        android:text="Height"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/heightft"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neck"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="46dp"
        android:layout_toStartOf="@+id/textView7"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neck"
        android:layout_alignParentEnd="false"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="52dp"
        android:layout_toStartOf="@+id/heightin"
        android:text="ft."
        android:textSize="24sp" />

    <EditText
        android:id="@+id/heightin"
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neck"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="46dp"
        android:layout_toStartOf="@+id/textView6"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="57dp"
        android:text="in."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="55dp"
        android:layout_toStartOf="@+id/neck"
        android:text="Neck"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/neck"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/waist"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="47dp"
        android:layout_toStartOf="@+id/textView3"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="59dp"
        android:text="in."
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/errorMessage"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="35dp"
        android:layout_toStartOf="@+id/waist"
        android:text="Waist"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="38dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calculate"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="81dp"
        android:text="in."
        android:textSize="24sp" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="44dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Calculate"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calculate"
        android:layout_marginEnd="-28dp"
        android:layout_marginBottom="23dp"
        android:layout_toStartOf="@+id/textView2"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Please fill in all empty spaces."
        android:textColor="#9E0000"
        android:textSize="20sp"
        android:visibility="invisible" />

</RelativeLayout>